package sec05;

import java.util.Scanner;

public class Work_Ex4 {

	public static void main(String[] args) {

		Scanner choScanner = new Scanner(System.in);

		System.out.print("초 단위 정수를 입력하세요 : ");
		int choOut = choScanner.nextInt();

		int choTime = choOut / 3600;
		int choMin = (choOut % 3600) / 60;
		int chocho = (choOut % 3600) % 60;

		System.out.printf("%d시간 %d분 %d초", choTime, choMin, chocho);
	}
}
