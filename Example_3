package sec05;

import java.util.Arrays;
import java.util.Scanner;

public class Work_Ex5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner stringScanner = new Scanner(System.in);
		System.out.print("입력할 대문자 : ");
		String inputGab = stringScanner.next();    // 입력받은값의 데이터 타입을 문자열로 받는다.


		String transBeyolGab[] = new String[inputGab.length()];  // 배열의 요소는 입력받은 문자열 길이만큼 생성하기 위해서 사용
		transBeyolGab[0] = inputGab;
//	System.out.println(Arrays.toString(transBeyolGab)); // 배열의 요소에 값이 잘 들어갔는지 배열로 확인

//  int chai = (int) 'C' - (int) 'c';             // 대문자를 소문자로 바꾸기 위한 정숫갑 차이
		System.out.print("변경된 소문자 : ");

		for (int i = 0; i < inputGab.length(); i++) {
			char transCharInputGab = inputGab.charAt(i);    // 배열의 요소에 들어있는 문자열을 문자로 변환

			char transCharSoInputGab = (char) (transCharInputGab + 32); // 변환한 문자값에 32를 더해주어 소문자로 변환
//			System.out.println(transCharSoInputGab);

			transBeyolGab[i] = String.valueOf(transCharSoInputGab); // 소문자로 변환된 값을 다시 배열의 요소에 넣기
//			System.out.println("배열 " + i + "의 값은 : " + transBeyolGab[i]);
			System.out.printf("%s", transBeyolGab[i]);
		}
		System.out.println();
		System.out.println(Arrays.toString(transBeyolGab));

	}
}
