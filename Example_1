package sec05;

import java.util.Scanner;

public class HomeWork2 {                  // 정수값을 입력받아 해당 값이 짝수인지 홀수인지 나타내는 방법

	public static void main(String[] args) {
  
		int a, temp;
		String b;

		System.out.print("정수를 입력하세요 : ");
		Scanner insc = new Scanner(System.in);
		temp = insc.nextInt();

		a = temp % 2;
		b = (a == 0) ? "짝수" : "홀수";

		System.out.println("첫 번째 방법 조건연산자로 : " + b);

		if (a == 0) {
			System.out.println("두 번째 방법 if문으로 : 짝수");
		} else {
			System.out.println("두 번째 방법 if문으로 : 홀수");
		}

	}

}
